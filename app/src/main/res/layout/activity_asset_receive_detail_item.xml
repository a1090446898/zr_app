<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="0dp"
              android:gravity="center_vertical">

    <!-- 多选框 -->
    <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!-- 资产信息展示区域（水平排列，可根据需求调整为垂直或网格） -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

        <TextView
                android:id="@+id/tv_asset_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="资产编号: " />

        <TextView
                android:id="@+id/tv_assetsname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="资产名称: " />

        <TextView
                android:id="@+id/tv_barcodeid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="条码编号: " />
        <TextView
                android:id="@+id/tv_assetsstandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="规格型号: " />

        <TextView
                android:id="@+id/tv_assetslayadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="存放地点: " />

        <TextView
                android:id="@+id/tv_assetscurrprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="资产原值: " />

        <TextView
                android:id="@+id/tv_assetsuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="使用人: " />


        <!-- 灰色下划线 -->
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0"/>
    </LinearLayout>

</LinearLayout>