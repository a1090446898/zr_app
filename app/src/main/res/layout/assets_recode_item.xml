<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="资产名称:" />

        <TextView
            android:id="@+id/tv_assets_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeMaxTextSize="@dimen/qmui_btn_text_size"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="资产名称:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="条码编号:" />

        <TextView
            android:id="@+id/tv_assets_barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="条码编号:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="使用人:" />

        <TextView
            android:id="@+id/tv_assets_useman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeMaxTextSize="@dimen/qmui_btn_text_size"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="使用人:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="分类:" />

        <TextView
            android:id="@+id/tv_assets_sortcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:autoSizeMaxTextSize="@dimen/qmui_btn_text_size"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="分类:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="录入人:" />

        <TextView
            android:id="@+id/tv_assets_writer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeMaxTextSize="@dimen/qmui_btn_text_size"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="录入人:" />
    </LinearLayout>
</LinearLayout>